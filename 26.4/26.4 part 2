import pytest
from fastapi.testclient import TestClient
from main import app, Base, engine, Recipe

# --- Создаем тестовую базу ---
Base.metadata.create_all(bind=engine)

client = TestClient(app)

def test_create_recipe():
    response = client.post("/recipes", json={
        "name": "Тестовое блюдо",
        "cook_time": 30,
        "ingredients": "Ингредиент1, Ингредиент2",
        "description": "Описание тестового блюда"
    })
    assert response.status_code == 201
    data = response.json()
    assert data["name"] == "Тестовое блюдо"
    assert data["cook_time"] == 30
    assert "ingredients" in data
    assert "description" in data

def test_get_recipes():
    response = client.get("/recipes")
    assert response.status_code == 200
    data = response.json()
    assert isinstance(data, list)
    assert len(data) >= 1  # хотя бы один рецепт должен быть

def test_get_recipe_detail():
    # Берем первый рецепт из базы
    recipe = client.get("/recipes").json()[0]
    recipe_id = recipe["id"]
    response = client.get(f"/recipes/{recipe_id}")
    assert response.status_code == 200
    data = response.json()
    assert data["id"] == recipe_id
    assert "ingredients" in data
    assert "description" in data

